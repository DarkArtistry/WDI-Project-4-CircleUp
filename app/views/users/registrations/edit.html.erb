<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :profilepic %><br />
    <%= f.file_field :profilepic %>
  </div>

  <div class="field">
    <%= f.label :bannerpic %><br />
    <%= f.file_field :bannerpic %>
  </div>

  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :dob %>
    <%= f.date_field :dob %>
  </div>

  <div class="field">
    <%= f.label :industry %>
    <%= f.select :industry, ["Accountancy", "Advertising, Marketing & Public Relations", "Agriculture & Environment",  "Animal Welfare", "Armed Forces", "Art & Design", "Banking & Finance", "Charity & Non-Profit", "Construction & Property", "Consultancy", "Education & Teaching", "Energy & Utilities", "Engineering", "Entrepreneurship", "Fashion & Beauty", "Fast Moving Consumer Goods", "Gaming", "Geomancy", "Hospitality, Leisure & Tourism", "Information Technology", "Law", "Manufacturing Industry", "Medicine & Healthcare", "Performing Arts", "Police, Security & Emergency", "Public Sector & Government", "Publishing & Media", "Recruitment & HR", "Retail & Merchandising", "Science & Research", "Social Care", "Sports & Fitness", "Transport & Logistics"], :selected =>  current_user.industry %>
  </div>

  <div class="field">
    <%= f.label :occupation %>
    <%= f.text_field :occupation %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.select :country,["Singapore"], :selected => current_user.country %>
  </div>

  <div class="field">
    <%= f.label :education %>
    <%= f.text_field :education %>
  </div>

  <div class="field">
    <%= f.label :company %>
    <%= f.text_field :company %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
